<h1>Listing steps</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Person</th>
      <th>Type</th>
      <th>To be completed on</th>
      <th>Completed on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.project_id %></td>
        <td><%= step.person_id %></td>
        <td><%= step.type %></td>
        <td><%= step.to_be_completed_on %></td>
        <td><%= step.completed_on %></td>
        <td><%= link_to 'Show', step %></td>
        <td><%= link_to 'Edit', edit_step_path(step) %></td>
        <td><%= link_to 'Destroy', step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Step', new_step_path %>
